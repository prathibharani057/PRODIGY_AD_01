<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5A5A"
    android:orientation="vertical"
    tools:context=".MainActivity">

<EditText
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:hint="Enter first number"
    android:id="@+id/num1"
    android:textSize="20sp"
    android:textAlignment="center"
    android:textColor="#fff"
    android:backgroundTint="#808080"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:hint="Enter second number"
    android:id="@+id/num2"
    android:textSize="20sp"
    android:textAlignment="center"
    android:textColor="#fff"
    android:backgroundTint="#808080" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:hint="Result"
    android:id="@+id/res"
    android:textSize="30sp"
    android:textAlignment="center"
    android:textColor="#fff"
    android:textStyle="bold"
    android:backgroundTint="#363636" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center">

<Button
    android:layout_width="90dp"
    android:layout_height="80dp"
    app:cornerRadius="10dp"
    android:text="AC"
    android:id="@+id/all_clear"
    android:textSize="20sp"
    android:textAlignment="center"
    android:onClick="all_clear"
    android:backgroundTint="#FFA500"
    />

<Button
    android:layout_width="90dp"
    android:layout_height="80dp"
    app:cornerRadius="10dp"
    android:text="CE"
    android:id="@+id/clear_field"
    android:textSize="20sp"
    android:textAlignment="center"
    android:onClick="clear_field_completely"
    android:backgroundTint="#FFA500"
    android:layout_marginStart="5dp" />

<Button
    android:layout_width="90dp"
    android:layout_height="80dp"
    app:cornerRadius="10dp"
    android:text="C"
    android:id="@+id/clear_one_digit"
    android:textSize="20sp"
    android:textAlignment="center"
    android:onClick="clear_one_digit_at_a_time"
    android:backgroundTint="#FFA500"
    android:layout_marginStart="5dp" />

<Button
    android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
    android:text="/"
    android:id="@+id/divide"
    android:textSize="20sp"
    android:textAlignment="center"
    android:onClick="divide"
    android:backgroundTint="#FFA500"
    android:layout_marginStart="5dp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="7"
            android:id="@+id/seven"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="8"
            android:id="@+id/eight"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="9"
            android:id="@+id/nine"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="*"
            android:id="@+id/mul"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="multiply"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="4"
            android:id="@+id/four"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="5"
            android:id="@+id/five"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="6"
            android:id="@+id/six"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="-"
            android:id="@+id/minus"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="subtract"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="1"
            android:id="@+id/one"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="2"
            android:id="@+id/two"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="3"
            android:id="@+id/three"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="+"
            android:id="@+id/add"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="add"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="00"
            android:id="@+id/doublezero"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="0"
            android:id="@+id/zero"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="."
            android:id="@+id/dot"
            android:textSize="30sp"
            android:textAlignment="center"
            android:onClick="numbers"
            android:backgroundTint="#808080"
            android:layout_marginStart="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:cornerRadius="10dp"
            android:text="="
            android:id="@+id/equal"
            android:textSize="20sp"
            android:textAlignment="center"
            android:onClick="compute"
            android:backgroundTint="#FFA500"
            android:layout_marginStart="5dp" />

    </LinearLayout>

    </LinearLayout>
